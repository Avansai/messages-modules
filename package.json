{
  "name": "messages-modules",
  "version": "0.0.1",
  "description": "Messages (localized strings) that are scoped locally.",
  "author": "Avansai (https://avansai.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Avansai/messages-modules.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": "./lib/index.js",
    "./babel-plugin": "./lib/babel-plugin/index.js",
    "./swc-plugin": "./lib/swc-plugin/index.js"
  },
  "typesVersions": {
    "*": {
      "content": [
        "lib/content/index.d.ts"
      ],
      "webpack-loader": [
        "lib/loader/webpack.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "rm -Rf ./lib && tsc && npm run lint && npm test",
    "test": "jest --coverage",
    "lint": "eslint . --fix",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --write .",
    "release": "dotenv -- release-it --only-version"
  },
  "license": "MIT",
  "files": [
    "lib"
  ],
  "keywords": [
    "messages-modules",
    "messages module",
    "messages",
    "MessageFormat",
    "intl",
    "i18n",
    "internationalization"
  ],
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^28.1.6",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.6.0",
    "jest": "^28.1.3",
    "prettier": "2.7.1",
    "release-it": "^15.1.3",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
